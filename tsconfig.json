{
  "compilerOptions": {
    "target": "ES6",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "allowJs": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "declaration": true,
    "strictNullChecks": true,
    "outDir": "lib/esm",
    "allowSyntheticDefaultImports": true,
    "strict": true
  },
  "include": [
    "./src/**/*"
  ]
}